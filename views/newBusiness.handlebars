<form class="newUser" action="/business" method = "POST">

	      <div class="form-group row has-danger">
	       
	        <label for="businessName" class="col-sm-2 col-form-label">Business Name</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
	            <input type="text" class="form-control" id="businessName" name="businessName" placeholder="Enter Your Business Name" required>

	        </div>
	      </div>
	        <!-- Contact Name  -->
	      <div class="form-group row has-danger">
	        <label for="contactName" class="col-sm-2 col-form-label">Contact Person</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
	            <input type="text" class="form-control" id="contactName"  name="contactName" placeholder="Enter the Name of the Person to contact" required>
	        </div>
	      </div>
	      <!-- email -->
	      <div class="form-group row has-danger">
	        <label for="email" class="col-sm-2 col-form-label">Email address</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
	            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
	        </div>
	      </div>
	      <!-- password  -->
	      <div class="form-group row has-danger">
	        <label for="password" class="col-sm-2 col-form-label">Password</label>
	        <div class="col-sm-8 input-group">
	          <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i></span>
	          <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
	        </div>
	      </div>
	      <!-- Business Website  -->
	      <div class="form-group row has-danger">
	        <label for="businessWebsite" class="col-sm-2 col-form-label">Business Website</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
	            <input type="url" class="form-control" id="businessWebsite" name="webLink" placeholder="Enter the Business Website Address" required>
	        </div>
	      </div>

	      <!-- Business Address -->
	     <div class="form-group row has-danger">
	        <label for="streetAddress" class="col-sm-2 col-form-label">Street Address</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
	            <input name="streetAddress" type="text" class="form-control" id="streetAddress" placeholder="Street Number and Street Name" required>
	        </div>
	      </div>
	      <!-- city -->
	      <div class="form-group row has-danger">
	           <label for="city" class="col-sm-2 col-form-label">City</label>
	           <div class="col-sm-8 input-group">
	              <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
	               <input type="text" class="form-control" id="city" placeholder="City" name="city" required>
	           </div>
	      </div>
	     <!-- state -->
	      <div class="form-group row has-danger">
	           <label for="state" class="col-sm-2 col-form-label">State</label>
	           <div class="col-sm-8 input-group">
	               <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
	               <input type="text" class="form-control" id="state" placeholder="State" minlength="2" maxlength="2" name="state" required>
	           </div>
	      </div>
	     <!-- state -->
	      <div class="form-group row has-danger">
	           <label for="zipCode" class="col-sm-2 col-form-label">Zip Code</label>
	           <div class="col-sm-8 input-group">
	               <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
	               <input type="text" class="form-control" id="zipCode" placeholder="Zip Code" minlength="5" maxlength="5" name="zipCode" required>
	           </div>
	      </div>
	      <!-- Business Description  -->
	      <div class="form-group row has-danger">
	        <label for="businessDescription" class="col-sm-2 col-form-label">Business Description</label>
	        <div class="col-sm-8 input-group">
	            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
	            <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
	       </div>
	      </div>

	      <!-- image attachment  -->
	      <div class="form-group row">
	        <label for="exampleInputFile" class="col-sm-2 col-form-label">Image Attachment</label>
	        <div class="col-sm-8 input-group">

	        <!--    <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp"> -->
	        <input type="url" class="form-control" id="photoLink" name="photoLink" placeholder="Enter the Link to your Image" required>
	        </div>
	      </div>
			
			<!-- button  -->
            <div class="form-group">
                 <button type="submit" class="btn btn-primary col-sm-8 col-sm-offset-2" id="buttonRegister">Submit Form</button>
              </div>

</form>